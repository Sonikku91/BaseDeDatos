<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.AtributosFragment">

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_FragmentAtributos"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="12dp"
        android:textAlignment="center"
        android:text="@string/tituloAgregarAtributo"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_weight="0"
        />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_Atributos"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="1dp"
            style="@android:style/Widget.DeviceDefault.ExpandableListView"
            android:divider="@android:color/darker_gray"
            android:scrollbarStyle="outsideOverlay"
            android:layout_weight="1"
            />

    <!--ListView
        android:entries="@array/Determinantes"
        android:id="@+id/listViewAtributos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:background="#0000"
        android:cacheColorHint="@android:color/darker_gray"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:scrollbarStyle="outsideOverlay"
        style="@android:style/Widget.DeviceDefault.ExpandableListView"
        android:headerDividersEnabled="false"
        android:paddingTop="8dip"
        /-->

</LinearLayout>

    <android.support.design.widget.FloatingActionButton
        app:fabSize="normal"
        app:srcCompat="@drawable/plus"
        android:id="@+id/fabAgregarAtributo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_alignBottom="@id/ll_FragmentAtributos"
        android:layout_alignParentRight="true"
        />

    </RelativeLayout>

