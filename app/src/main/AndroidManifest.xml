<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fedelizondo.basededatos">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AgregarDependenciaFuncional"
            android:label="@string/title_activity_agregar_dependencia_funcional"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fedelizondo.basededatos.MainActivity" />
        </activity>
        <activity
            android:name=".ModificarDependeciaFuncional"
            android:label="@string/title_activity_modificar_dependecia_funcional"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CalcularClausura"
            android:label="@string/title_activity_calcular_clausura"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AgregarEsquemas"
            android:label="@string/title_activity_agregar_esquemas"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CalculoTableaux"
            android:label="@string/title_activity_calculo_tableaux"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ModificarEsquema"
            android:label="@string/title_activity_modificar_esquema"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>